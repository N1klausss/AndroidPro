<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a58204.android_lab1.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中山大学学生信息系统"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine" />

    <ImageView
        android:id="@+id/sysu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sysu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/stu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号："
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/sysu_img"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp" />
    <EditText
        android:id="@+id/in_id"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="numberDecimal"
        android:hint="请输入学号"
        app:layout_constraintLeft_toRightOf="@id/stu_id"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/sysu_img"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/stu_id"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
      />
    <EditText
        android:id="@+id/in_pass"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="numberPassword"
        android:hint="请输入密码"
        app:layout_constraintLeft_toRightOf="@id/password"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/in_id"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
    
    <RadioGroup
        android:id="@+id/identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/in_pass"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <RadioButton
            android:id="@+id/butt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生"
            android:textSize="10sp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/butt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教职工"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/butt1"
            android:layout_marginLeft="10dp"/>

    </RadioGroup>
    <Button
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_grd"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/register"
        app:layout_constraintTop_toBottomOf="@id/identity"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="22dp"
        android:layout_marginRight="20dp"
    />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_grd"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/log_in"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/identity"
        android:layout_marginTop="20dp"
        />
</android.support.constraint.ConstraintLayout>
