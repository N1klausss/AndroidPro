<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ヽ(*￣∀￣)ﾉ～★恭喜发财★～"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="姓名："
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/dia_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/birth_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="生日："
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/gift_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="礼物："
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/birth_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="电话："
        android:textSize="15sp"
        android:textColor="#66CD00"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gift_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="吴彦祖"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/dia_title"
        app:layout_constraintLeft_toRightOf="@+id/name_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />

    <EditText
        android:id="@+id/birth"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/birth_text"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/gift"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/gift_text"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="空"
        android:textSize="15sp"
        android:textColor="#66CD00"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/number_text"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>


</android.support.constraint.ConstraintLayout>